<UserControl x:Class="MusicHub.Controls.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicHub"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:IsSongSelectedToVisibility x:Key="isSongSelectedToVisibility"/>
        <local:IsSongNotSelectedToVisibility x:Key="isSongNotSelectedToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <!-- Slider -->
        <Slider x:Name="PlaySongSlider"
                Maximum="{Binding CustomMediaElement.SecondsMaximum}" 
                Value="{Binding CustomMediaElement.SecondsProgress, Mode=OneWay}"
                Grid.Column="1" Width="240" Height="5" Background="#BACBF6"
                Foreground="#7197F8"
                Margin="45 0 0 0"
                Visibility="{Binding SelectedSong, Converter={StaticResource isSongSelectedToVisibility}}"
                Thumb.DragStarted="PlaySongSlider_DragStarted"
                Thumb.DragCompleted="PlaySongSlider_DragCompleted"
                />
    </Grid>
</UserControl>
